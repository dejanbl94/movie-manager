@model RegisterViewModel


@{
    ViewData["Title"] = "Register";
}

<div id="blurDiv"></div>
<div id="registerForm" style="visibility:hidden;">
    <div class="row h-100">
        <div class="col-sm-12 my-auto">
            <div id="registerCard" class="card card-block w-50 mx-auto p-5">
                <form asp-controller="Register" asp-action="Register" method="post">
                    <h5>Try us? Create a free account! </h5>
                    <hr />
                    <div class="form-group">
                        <input asp-for="Username" class="form-control form-control-sm" placeholder="Name" autocomplete="off" />
                        <span asp-validation-for="Username" class="text-danger" style="font-size:small"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Email" class="form-control form-control-sm" placeholder="Email" autocomplete="off" />
                        <span asp-validation-for="Email" class="text-danger" style="font-size:small"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Password" class="form-control form-control-sm" placeholder="Password" />
                        <span asp-validation-for="Password" class="text-danger" style="font-size:small"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="ConfirmPassword" class="form-control form-control-sm" placeholder="Confirm Password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger" style="font-size:small"></span>
                    </div>
                    <div class="d-flex flex-row justify-content-between">
                        <div class="col-md-9 p-0">
                            <p style="font-size:10px">
                                By clicking “Sign up” I agree to the Movie Manager Terms of Service and confirm that I am at least 13 years old.
                            </p>
                        </div>
                        <div class="col-md-3 p-0">
                            <button type="submit" class="btn btn-warning btn-group-lg" id="registerBtn" style="float:right">Sign Up</button>
                        </div>
                    </div>

                    @if (TempData["DuplicateUsername"] != null)
                    {
                        <div class="form-group m-0">
                            <div style="height:10px"></div>
                            <div class="text-danger" style="font-size:small; font-weight:500">
                                <p>@TempData["DuplicateUsername"].ToString()</p>
                            </div>
                        </div>
                    }
                    @if (TempData["Success"] != null)
                    {
                        <div class="form-group m-0">
                            <div style="height:10px"></div>
                            <div class="text-success" style="font-size:small; font-weight:500">
                                <p>@TempData["Success"].ToString()</p>
                            </div>
                        </div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="form-group m-0">
                            <div style="height:10px"></div>
                            <div class="text-danger" style="font-size:small; font-weight:500">
                                <p>@TempData["Error"].ToString()</p>
                            </div>
                        </div>
                    }
                </form>
            </div>
        </div>
    </div>
</div>