@using Microsoft.AspNetCore.Identity
@using DataLayer.Models.Identity

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Register" asp-action="Logout" method="post" id="logoutForm">
        <div>
            <div style="float:left; padding-left:20px;">
                <a asp-area="" asp-controller="Home" asp-action="Index">Hello, @UserManager.GetUserName(User)!</a>
            </div>
            <div style="float:left; padding-left:20px;">
                <button type="submit" class="btn btn-dark m-sm-1 btn-sm" style="background-color:#684B3E !important">Log out, @UserManager.GetUserAsync(User)</button>
            </div>
        </div>
    </form>
}
else
{
    <div>
        <div style="float:left; padding-left:20px;"><a asp-area="" asp-controller="Register" asp-action="Register">Index</a></div>
        
    </div>
}