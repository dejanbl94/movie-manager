@using Microsoft.AspNetCore.Identity
@using DataLayer.Models.Identity

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Home" asp-action="Logout" method="post" id="logoutForm">
        <!--<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Logout">Log out, @UserManager.GetUserName(User)!</a>-->
        <button type="submit" class="btn btn-outline-dark ">Log out, @UserManager.GetUserName(User)</button>
    </form>
}
else
{
    <div>
      <a class="btn btn-outline-dark" asp-area="" asp-controller="Register" asp-action="Register">Register</a>
    </div>
}